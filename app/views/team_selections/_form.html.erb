<%= form_for @team_selection do |f| %>
	<% if @team_selection.errors.any? %>
		<h2><%= pluralize(@team_selection.errors.count, "error") %> prevented this team selection from saving:</h2>
		<ul>
			<% @team_selection.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>

		<% end %>
		<div class="form-group">
			
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
		</div>

		
		<div class="form-group">
			<%= f.label :position %>
			<%= f.select(:position, options_for_select([['GK',0],['DEF',1],['MID',2],['FWD',3],['RES',4]]), {}, {class: 'form-control'}) %>
	
		</div>
		
		<div class="form-group">
			<%= f.label :club_id %>
			<%= f.collection_select(:club_id, Club.all, :id, :name, {}, {class: 'form-control'}) %>
	
		</div>

		<%= f.submit 'Submit', class: "btn btn-default" %>
<% end %>