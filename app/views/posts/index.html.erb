<div class="container">
    <div class="row">
        <div class="col-lg-5 col-lg-offset-1 col-md-10 col-md-offset-1">
            <% @posts.take(3).each do |post| %>
							<div class="post-preview">
	            	<%= link_to (post) do %>
	                <h2 class="post-title">
	                 	<%= post.title %>
	                </h2>
	              <% end %>
              	<p class="post-meta">Opublikował <%= link_to "Rafał Nater", contact_path %> dnia <%= post.created_at.strftime("%d %B, %y") %></p>
            	</div>
            	<hr>
            <% end %>
        </div>
        <div class="col-lg-5 col-lg-offset-1 col-md-10 col-md-offset-1">
          <% if @posts.length > 3 %>
              <% @posts[3,3].each do |post| %>
  							<div class="post-preview">
  	            	<%= link_to (post) do %>
  	                <h2 class="post-title">
  	                 	<%= post.title %>
  	                </h2>
  	              <% end %>
                	<p class="post-meta">Opublikował <%= link_to "Rafał Nater", contact_path %> dnia <%= post.created_at.strftime("%d %B, %y") %></p>
              	</div>
              	<hr>
              <% end %>
            <% end %>
        	</div>
        <div class="pagination-main">
            <nav>
              <ul class="pagination ">
                <li>
                  <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>
                  <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
        </div>
       
    </div>
</div>