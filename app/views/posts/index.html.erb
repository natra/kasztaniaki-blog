<div class="container">
    <div class="row">
        <div class="col-lg-5 col-lg-offset-1 col-md-10 col-md-offset-1">
            <% @posts.each_with_index do |post, index| %>
							<div class="post-preview">
	            	<%= link_to (post) do %>
	                <h2 class="post-title">
	                 	<%= post.title %>
	                </h2>
	              <% end %>
              	<p class="post-meta">Opublikował <%= link_to "Rafał Nater", new_contact_path %> dnia <%= I18n.l post.created_at, :format => :home %></p>
            	</div>
            	<hr>
              <% if index == 2 %>
                </div>
                <div class="col-lg-5 col-lg-offset-0 col-md-10 col-md-offset-1">
              <% end %>
            <% end %>
        </div>
    </div>
    <div class="pagination-main">
      <%= will_paginate @posts %>
    </div>
               
</div>