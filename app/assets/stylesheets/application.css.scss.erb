body {
  font-family: 'Lora', 'Times New Roman', serif;
  font-size: 20px;
  color: #404040;
}
h1,
h2,
h3{
  font-family: 'Open Sans', 'Helvetica Neue', sans-serif;
  font-weight: 800;
}
p {
  line-height: 1.5;
  margin: 30px 0;
}
p a {
  text-decoration: underline;
}
a {
  color: #404040;
}
a:hover,
a:focus {
  color: #0085a1;
}

hr.white {
  border-width: 4px;
  border-color: white;
  max-width: 200px;
  margin: 17px auto;
}

hr.black {
  border-width: 2px;
  border-color: #0085a1;
  max-width: 200px;
  margin: 17px auto;
}

.navbar-custom {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-weight: 800;
}
.navbar-custom .nav li a {
  text-transform: uppercase;
  font-size: 12px;
  letter-spacing: 1px;
}
@media only screen and (min-width: 768px) {
  .navbar-custom {
    background: transparent;
    border-bottom: 1px solid transparent;
  }
  .navbar-custom .navbar-brand {
    color: white;
    padding: 20px;
  }
  .navbar-custom .navbar-brand:hover,
  .navbar-custom .navbar-brand:focus {
    color: #FFF;
  }
  .navbar-custom .nav li a {
    color: white;
    padding: 20px 20px 5px 20px;
  }
  .navbar-custom .nav li a:hover,
  .navbar-custom .nav li a:focus {
    color: #FFF;
    border-bottom: 3px solid  #0085a1;
  }
}

/* PAGER */

.pagination a, 
.pager li > a,
.pagination em.current,
span.disabled {
  font-family: 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  font-weight: 800;
  letter-spacing: 1px;
  padding: 15px 25px;
  background-color: #404040;
  border-radius: 0;
  color: white;
}

.pagination a:hover,
.pagination a:focus, 
.pager li > a:hover,
.pager li > a:focus {
  background-color: #0085a1;
  text-decoration: none;
}

.pagination a:hover,
.pagination a:focus {
  background-color: #ddd;
} 

.pagination em.current,
span.disabled {
  background-color: #ddd;
  color: #404040;
}

.pagination a {
  background-color: white;
  color: #404040;
  border: 1px #ddd solid;
}

.pagination-main {
  text-align: center;
}

/*TEAM TABLE*/

.gw-team-table td img {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.gw-team-table span, .res-table span {
  font: 15px "open sans";
}

.gw-team-table span {
  
  background-color: #0085a1;
  color: #FFFFFF;
  padding: 3px;
}

.gw-team-table .gw-num span {
  font: 25px lora;
  background-color: #FFFFFF;
  color: #404040;
}

.gw-num {
  vertical-align: bottom;
}

.gw-team-table, .res-table {
  width: 100%;
  max-width: 390px;
  text-align: center;
  table-layout: fixed;
  margin: 0 auto;
}

.gw-team-table {
    background-image: url('<%= asset_path 'pitch-transparent2.png' %>');
    background-size: 100%;
    background-repeat: no-repeat;
    margin: 40px auto 20px auto;
    width: 100%;
}

.res-table {
  border: 1px dotted #0085a1;
  background-color: #0085a1;
  color: #fff;
  margin: 0 auto;
}

@media only screen and (min-width: 768px){
  .gw-team-table, .res-table {
    width: 390px;
  }
  .gw-team-table {
    margin-top: 0;
  }
}

.gw-team-table td, .res-table td {
   padding: 18px 0 18px 0;
}

/* BRAND HEADER */

.brand-header {
  background: url('<%= asset_path 'es2-4.jpg' %>') no-repeat center top fixed;
  margin-bottom: 50px;
}
.brand-header .site-heading {
  padding: 100px 0 50px;
  color: white;
  text-align: center;
}

.brand-header .site-heading h1 {
  margin-top: 0;
  font-size: 50px;
}
.brand-header .site-heading .subheading {
  font-size: 24px;
  line-height: 1.1;
  font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-weight: 300;
  margin: 10px 0 0;
  padding: 0 10px;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  border-radius: 20px;
  background-color: rgba(0, 133, 161, 1);
}
@media only screen and (min-width: 768px) {
  .brand-header .site-heading{
    padding: 150px 0;
  }
  .brand-header .site-heading h1 {
    font-size: 80px;
  }
}

/* POST PREVIEW */

.post-preview > a {
  color: #404040;
}
.post-preview > a:hover,
.post-preview > a:focus {
  text-decoration: none;
  color: #0085a1;
}
.post-preview > a > .post-title {
  font-size: 30px;
  margin-top: 30px;
  margin-bottom: 10px;
}
.post-preview > a > .post-subtitle {
  margin: 0;
  font-weight: 300;
  margin-bottom: 10px;
}
.post-preview > .post-meta {
  color: #808080;
  font-size: 18px;
  font-style: italic;
  margin-top: 0;
}
.post-preview > .post-meta > a {
  text-decoration: none;
  color: #404040;
}
.post-preview > .post-meta > a:hover,
.post-preview > .post-meta > a:focus {
  color: #0085a1;
  text-decoration: underline;
}
@media only screen and (min-width: 768px) {
  .post-preview > a > .post-title {
    font-size: 36px;
  }
  
}

/* FOOTER */

footer {
  padding: 30px 0 30px;
  border-top: 1px solid #eee;
  margin-top: 20px;
}
footer .list-inline {
  margin: 0;
  padding: 0;
  text-align: center;
  position: relative;
  top: -50px;
}
footer .copyright {
  font-size: 14px;
  margin-bottom: 0;
  display: block;
  vertical-align: middle;
  text-align: center;
  position: relative;
  top: 50px;
}

@media only screen and (min-width: 768px){
  footer .list-inline {
    text-align: right;
    width: 100%;
    position: static;
    top: 0;
  }
  footer .copyright {
    display: table-cell;
    position: static;
    top: 0;
  }
  footer .row {
    display: flex;
    align-items: center;
  }
  footer .media-footer-div {
    float: right;
    text-align: right;
  }
}

/* ARTICLE VIEW */

.article {
  text-align: justify;
}

.article img {
  margin: 0 auto;
  display: block;
  max-width: 100%;
}

.post {
  margin-bottom: 45px;
}

/* DISQUS */

.disqus_thread {
  margin-top: 15px;
}

/* LOGIN */

.login .checkbox input {
  top: 3px;
}

.login .checkbox label {
  padding-left: 0;
}
